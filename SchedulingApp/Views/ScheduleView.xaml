<UserControl
    x:Class="SchedulingApp.Views.ScheduleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:SchedulingApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:SchedulingApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:SchedulingApp.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ScheduleViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Converters:ColorConverter x:Key="ColorConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>

        <!--  控制区域  -->
        <hc:Card
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            Header="排班表控制">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <hc:UniformSpacingPanel
                    Grid.Row="0"
                    Margin="5"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        FontWeight="Bold"
                        Text="选择日期范围" />
                </hc:UniformSpacingPanel>

                <hc:UniformSpacingPanel
                    Grid.Row="1"
                    Margin="5"
                    Orientation="Horizontal">
                    <hc:UniformSpacingPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="开始日期:" />
                        <hc:DatePicker
                            Width="120"
                            Margin="5,0"
                            SelectedDate="{Binding StartDate}" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Text="结束日期:" />
                        <hc:DatePicker
                            Width="120"
                            Margin="5,0"
                            SelectedDate="{Binding EndDate}" />
                    </hc:UniformSpacingPanel>

                    <hc:UniformSpacingPanel
                        Margin="10,0,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Width="110"
                            Command="{Binding GenerateScheduleCommand}"
                            Content="生成排班表" />
                        <Button
                            Width="110"
                            Command="{Binding UploadScheduleCommand}"
                            Content="上传排班表"
                            IsEnabled="{Binding CanUpload}" />
                        <Button
                            Width="110"
                            Command="{Binding ExportScheduleCommand}"
                            Content="导出排班表"
                            IsEnabled="{Binding CanExport}" />
                        <Button
                            Width="110"
                            Command="{Binding ClearScheduleCommand}"
                            Content="清空排班表" />
                    </hc:UniformSpacingPanel>
                </hc:UniformSpacingPanel>
            </Grid>
        </hc:Card>

        <!--  排班表显示区域  -->
        <DataGrid
            x:Name="ScheduleDataGrid"
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            hc:DataGridAttach.ShowRowNumber="True"
            AutoGenerateColumns="False"
            BorderBrush="{DynamicResource BorderBrush}"
            CanUserAddRows="False"
            ItemsSource="{Binding StaffWithSchedules}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding Name}"
                    Header="姓名" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding Id}"
                    Header="员工ID" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding Group}"
                    Header="组别" />
            </DataGrid.Columns>
        </DataGrid>

        <!--  员工班次统计表 (右侧)  -->
        <DataGrid
            x:Name="StaffStatisticsGrid"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,10,10,10"
            hc:DataGridAttach.ShowRowNumber="False"
            AutoGenerateColumns="False"
            BorderBrush="{DynamicResource BorderBrush}"
            CanUserAddRows="False"
            HeadersVisibility="Column"
            ItemsSource="{Binding StaffStatistics}"
            Visibility="{Binding StaffStatisticsVisibility}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding StaffName}"
                    Header="员工姓名" />
                <!--  动态生成的班次列将在代码中添加  -->
            </DataGrid.Columns>
        </DataGrid>

        <!--  每日班次统计列表 (下方)  -->
        <DataGrid
            x:Name="DailyStatisticsGrid"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            MaxHeight="200"
            Margin="10"
            hc:DataGridAttach.ShowRowNumber="False"
            AutoGenerateColumns="False"
            BorderBrush="{DynamicResource BorderBrush}"
            CanUserAddRows="False"
            HeadersVisibility="Column"
            ItemsSource="{Binding DailyStatistics}"
            Visibility="{Binding DailyStatisticsVisibility}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding ShiftType}"
                    Header="班次类型" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>