<Window
    x:Class="SchedulingApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:SchedulingApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:SchedulingApp.ViewModels"
    xmlns:views="clr-namespace:SchedulingApp.Views"
    Title="排班管理系统"
    Width="1200"
    Height="800"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    Background="{DynamicResource RegionBrush}"
    mc:Ignorable="d">

    <Grid>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>-->

        <!--  Title Bar  -->
        <!--<Border
            Grid.Row="0"
            Padding="15,10"
            Background="{DynamicResource PrimaryBrush}">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Text="排班管理系统" />
        </Border>-->

        <!--  Tab Control with HandyControl styling  -->
        <hc:TabControl
            Margin="10"
            Background="{DynamicResource RegionBrush}"
            BorderBrush="{DynamicResource BorderBrush}">
            <hc:TabItem Header="排班表">
                <views:ScheduleView DataContext="{Binding ScheduleViewModel}" />
            </hc:TabItem>

            <hc:TabItem Header="人员管理">
                <views:StaffView DataContext="{Binding StaffViewModel}" />
            </hc:TabItem>

            <hc:TabItem Header="班次管理">
                <views:ShiftView DataContext="{Binding ShiftViewModel}" />
            </hc:TabItem>

            <hc:TabItem Header="排班规则">
                <views:RulesView DataContext="{Binding RulesViewModel}" />
            </hc:TabItem>
        </hc:TabControl>

    </Grid>
</Window>