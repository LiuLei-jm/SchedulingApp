<UserControl
    x:Class="SchedulingApp.Views.StaffView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:SchedulingApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:SchedulingApp.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:StaffViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <hc:UniformSpacingPanel
            Grid.Row="0"
            Margin="0,0,0,10"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                Width="100"
                Command="{Binding AddStaffCommand}"
                Content="添加人员"
                FontSize="14" />
            <Button
                Width="100"
                Command="{Binding EditStaffCommand}"
                CommandParameter="{Binding ElementName=StaffDataGrid, Path=SelectedItem}"
                Content="编辑人员"
                FontSize="14" />
            <Button
                Width="100"
                Command="{Binding DeleteStaffCommand}"
                CommandParameter="{Binding ElementName=StaffDataGrid, Path=SelectedItems}"
                Content="删除人员"
                FontSize="14" />
            <Button
                Width="100"
                Command="{Binding DownloadStaffTemplateCommand}"
                Content="下载模板"
                FontSize="14" />
            <Button
                Width="100"
                Command="{Binding UploadStaffFileCommand}"
                Content="上传文件"
                FontSize="14" />
        </hc:UniformSpacingPanel>

        <DataGrid
            x:Name="StaffDataGrid"
            Grid.Row="1"
            hc:DataGridAttach.ShowRowNumber="True"
            AutoGenerateColumns="False"
            BorderBrush="{DynamicResource BorderBrush}"
            ItemsSource="{Binding Staffs}"
            SelectionMode="Extended"
            SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="姓名" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Id}"
                    Header="工号" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Group}"
                    Header="组别" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>